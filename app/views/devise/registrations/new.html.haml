.mt-5
  .row
    .col-12.col-sm-8.offset-sm-2.col-md-6.offset-md-3.col-lg-6.offset-lg-3.col-xl-4.offset-xl-4
      .login-brand
        %h2 UNFRAMED
      .card.card-primary  
        .card-header
          %h4 Sign up
        .card-body
          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = render "devise/shared/error_messages", resource: resource
            .form-group
              = f.label :username
              %br/
              = f.text_field :username, autocomplete: "username", autofocus: true, class: 'form-control'
            .form-group
              = f.label :email
              %br/
              = f.email_field :email, autocomplete: "email", class: 'form-control'
            .form-group
              = f.label :password
              - if @minimum_password_length
                %em
                  (#{@minimum_password_length} characters minimum)
              %br/
              = f.password_field :password, autocomplete: "new-password", class: 'form-control'
            .form-group
              = f.label :password_confirmation
              %br/
              = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control'
            .actions
              = f.submit 'Sign up', class: 'btn btn-primary btn-lg btn-block'
          = render "devise/shared/links"
