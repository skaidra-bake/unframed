%h1 New Conversation
= form_tag conversations_path, method: :post do |c|
    %div= select_tag :user_id, options_from_collection_for_select(@recipients, :id, :username)
    %div= text_field_tag :subject, nil, placeholder: 'Subject'
    %div= text_area_tag :body, nil, placeholder: 'Leave a comment'
    = submit_tag